@{
}
<h2>Comprobando Clave</h2>

@if (ViewBag.Clave == null)
{
    <p>No se ingresó ninguna clave.</p>
}
else
{
    <p>La clave ingresada fue: <strong>@ViewBag.Clave</strong></p>

    @if (ViewBag.EsSegura == true)
    {
        <p style="color:green;">La clave es segura.</p>
    }
    else
    {
        <p style="color:red;">La clave NO es segura.</p>
        <p>Debe tener al menos 8 caracteres, una mayúscula y un número.</p>
    }
}